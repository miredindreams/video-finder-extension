{
  "manifest_version": 3,
  "name": "Video Finder",
  "version": "1.0.0",
  "description": "Находит альтернативные источники для просмотра видео с нужным качеством и озвучкой",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.kinopoisk.dev/*",
    "https://imdb-api.com/*",
    "https://www.omdbapi.com/*",
    "https://your-backend-api.com/*" //ЗАМЕНИТЬ
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kinopoisk.ru/*",
        "*://*.kinopoisk.dev/*",
        "*://*.imdb.com/*",
        "*://*.myanimelist.net/*"
      ],
      "js": ["content/content.js"],
      "css": ["assets/styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}